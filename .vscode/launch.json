{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Debug Angular (Chrome)",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}/frontend",
      "sourceMapPathOverrides": {
        "webpack:/*": "${webRoot}/*",
        "/./*": "${webRoot}/*",
        "/src/*": "${webRoot}/src/*",
        "/*": "*",
        "/./~/*": "${webRoot}/node_modules/*"
      },
      "preLaunchTask": "npm: start",
      "sourceMaps": true
    },
    {
      "type": "firefox",
      "request": "launch",
      "name": "Debug Angular (Firefox)",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}/frontend",
      "pathMappings": [
        {
          "url": "webpack:///",
          "path": "${webRoot}/"
        }
      ],
      "preLaunchTask": "npm: start",
      "sourceMaps": true
    }
  ]
}
